$highlight-color = #ff3870
$control-width   = 240px

.datepicker-control
	position absolute
	font-size 12px
	color white

	button
		color white
		background-color transparent
		border 1px solid transparent

		&:hover
			border 1px solid $highlight-color

	.controls, .aux-controls
		width $control-width
		text-align center

	.controls
		.datepicker-month
			font-size 16px

		.year-prev-button, .month-prev-button
			float left

		.year-next-button, .month-next-button
			float right

	table
		table-layout fixed
		width $control-width

		td
			width 2%
			text-align center
			padding 5px
			cursor default
			border 1px solid transparent

			&:hover
				border 1px solid $highlight-color !important

			&.datepicker-today
				border 1px solid gold
				font-weight bold

			&.datepicker-next-month, &.datepicker-prev-month
				color #444

